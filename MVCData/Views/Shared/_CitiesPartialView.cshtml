
@model PeopleViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <h5>Name</h5>
        </div>
        <div class="col">
            <h5>ID</h5>
        </div>
        <div class="col">
            <h5>Country</h5>
        </div>
        <div class="col">
            <h5>Edit</h5>
        </div>
        <div class="col">
            <h5>Delete</h5>
        </div>
    </div>
</div>


@foreach (City city in @Model.Cities)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <p>@city.Name</p>
            </div>
            <div class="col">
                <p>@city.CityId</p>
            </div>
            <div class="col">
                <p>@city.Country.Name</p>
            </div>
            <div class="col">
                <button type="button" asp-controller="People" asp-action="EditCity"
                        data-target="peopleView" id="editCityButton">
                    Edit
                </button>
            </div>
            <div class="col">
                <button onclick="deleteCity(@city.CityId)">Delete</button>
            </div>
        </div>
    </div>
}

<script>
    function deleteCity(e) {
        let id = e;
        var url = "People/DeleteCity/" + id;
        $.post(url, function (res) {
            $("#peopleView").html(res);
        });
    }
</script>
